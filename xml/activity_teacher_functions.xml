<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.autodice.classmanagementsystem.TeacherFunctions">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="30dp"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView android:layout_height="180dp" android:layout_width="160dp"
        android:layout_margin="10dp" android:id="@+id/lecturett" android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        android:padding="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp">


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:layout_gravity="center">

    <ImageView android:layout_height="54dp" android:layout_width="54dp"
        android:layout_gravity="center"
        android:background="@color/darkblue"
        android:src="@drawable/calender"
        android:padding="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_marginTop="20dp" android:layout_gravity="center" android:text="Lectures"
        android:textStyle="bold"/>

</LinearLayout>

</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView android:layout_height="180dp"
        android:layout_width="160dp" android:layout_margin="10dp" android:id="@+id/attendance"
        android:clickable="true" android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        android:padding="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp">


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:layout_gravity="center">

    <ImageView android:layout_height="54dp" android:layout_width="54dp"
        android:layout_gravity="center" android:background="@color/gree"
        android:src="@drawable/ic_test"
        android:padding="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_marginTop="20dp" android:layout_gravity="center" android:text="Doubts" android:textStyle="bold"/>

</LinearLayout>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_height="180dp"
        android:layout_width="160dp" android:layout_margin="10dp" android:id="@+id/notification"
        android:clickable="true" android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        android:padding="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp">


        <LinearLayout android:orientation="vertical" android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:layout_gravity="center">

            <ImageView android:layout_height="54dp" android:layout_width="54dp"
                android:layout_gravity="center" android:background="@color/yello"
                android:src="@drawable/notifications"
                android:padding="10dp"/>

            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center" android:text="Notifications" android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

</ScrollView>