<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.autodice.classmanagementsystem.StudentSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Sign Up"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etname"
        android:hint="Enter Full Name"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etcontact"
        android:inputType="phone"
        android:layout_marginTop="15dp"
        android:hint="Enter Mobile No."
        android:background="@drawable/edittext_bg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etaddress"
        android:layout_marginTop="15dp"
        android:hint="Enter Address"
        android:inputType="textMultiLine"
        android:lines="3"
        android:background="@drawable/edittext_bg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etemail"
        android:layout_marginTop="15dp"
        android:hint="Enter Email ID"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_bg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etcontactparent"
        android:layout_marginTop="15dp"
        android:inputType="phone"
        android:hint="Enter Parent Mobile No."
        android:background="@drawable/edittext_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tv1"
            android:textColor="#000"
            android:text="Select Batch"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spinnerBatchlist"></Spinner>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:id="@+id/tv2"
                android:text="Select Standard"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/spinner"></Spinner>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/tv4"
            android:text="Select Date Of Birth"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btAddDate"
            android:textColor="@color/deep_purple"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginLeft="40dp"
            android:clickable="true"
            android:text="Add Date"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etpassword"
        android:layout_marginTop="15dp"
        android:hint="Enter Default Password"
        android:inputType="textPassword"
        android:background="@drawable/edittext_bg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/btsubmit"
        android:layout_gravity="center"
        android:background="@drawable/buttonstyle"
        android:textColor="#fff"
        android:text="SUBMIT"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvspbatch"
            android:textSize="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:visibility="invisible"
            android:id="@+id/checktext"/>

    </LinearLayout>
</ScrollView>