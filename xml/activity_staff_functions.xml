<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.autodice.classmanagementsystem.StaffFunctions">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">


    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:id="@+id/card1"
        app:cardCornerRadius="20dp"
        android:padding="20dp"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="7dp"
        android:clickable="true"
        android:layout_marginRight="20dp"
        android:onClick="card1Function">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/calender"
                android:background="@color/deep_purple"
                android:layout_gravity="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Lecture"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:id="@+id/card2"
        app:cardCornerRadius="20dp"
        android:padding="30dp"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardElevation="7dp"
        android:layout_marginLeft="20dp"
        android:onClick="card2Function">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/attendance"
                android:background="@color/yello"
                android:layout_gravity="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Attendance"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@+id/card2"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="card3Function">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/notifications"
                android:background="@color/gree"
                android:layout_gravity="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Notification"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_below="@+id/card2"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="7dp"
            android:onClick="card4function">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_test"
                    android:background="@color/deep_purple"
                    android:layout_gravity="center"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule Test"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp">


            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_below="@+id/card3"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="7dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="card5Function">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@drawable/ic_person_white"
                        android:background="@color/yello"
                        android:layout_gravity="center"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Data"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_below="@+id/card2"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardElevation="7dp"
                android:onClick="card6function">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@drawable/ic_people_white"
                        android:background="@color/gree"
                        android:layout_gravity="center"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Data"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:elevation="10dp"
            android:id="@+id/fab_menu"
            app:menu_colorNormal="@color/darkblue"
            app:menu_colorPressed="@color/skyblue"
            app:menu_labels_style="@style/customfab">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="mymethod1"
                android:src="@drawable/add_white"
                app:fab_label="Add Student"
                app:fab_size="mini"
                app:fab_colorNormal="@color/darkblue"
                app:menu_colorNormal="#fff"
                app:menu_colorPressed="#fff" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:fab_colorNormal="@color/darkblue"
                android:onClick="mymethod2"
                android:src="@drawable/add_white"
                app:fab_label="Add Teacher"
                app:fab_size="mini"
                android:background="@color/darkblue"
                app:menu_colorNormal="#fff"
                app:menu_colorPressed="#fff" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/darkblue"
                android:layout_marginBottom="10dp"
                android:onClick="mymethod3"
                android:src="@drawable/add_white"
                app:fab_label="Add Batches"
                app:fab_size="mini"
                android:background="@color/darkblue"
                app:menu_colorNormal="#fff"
                app:menu_colorPressed="#fff" />


        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation"
        app:menu="@menu/nagivation_menu"
        app:headerLayout="@layout/drawer_header"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
